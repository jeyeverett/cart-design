{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@constants/*": ["src/constants/*"],
      "@handlers/*": ["src/handlers/*"],
      "@lib/*": ["src/lib/*"],
      "@routes/*": ["src/routes/*"],
      "@services/*": ["src/services/*"],
      "@utils/*": ["src/utils/*"],

    },
  },
  "include": ["./src/**/*"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
